{% extends "::base.html.twig" %}
{% import '::macro.html.twig' as forms %}

{% block body %}


<div class="row">

	{% include "CTRVEventBundle:Event:menuEvent.html.twig" %}
	
	<div class="span90">
	
		<h3>{% trans %}event.list.title{% endtrans %}</h3>
		
		<form id="choose_event_type" action="" method="post">
			{{ form_widget(form) }}
		</form>
		
		<div id="event-list"> <!-- le tableau sera affiché ici en js --></div>
		
	</div>

</div>

<script type="text/javascript" src="{{ asset('bundles/ctrvevent/js/event.js') }}"></script>
<script>
	$(function() { //à la fin du  chargement du DOM

		var urlAction = "{{ path('loadEventByType') }}";
		var page = 1;
		var eventTypeId = $("#choose_event_type_placeType").val();
		loadEventByType (urlAction,eventTypeId,page,$("#event-list"));

		//si on change de type de place
		$("#choose_event_type").change(function() {
			page = 1;
			eventTypeId = $("#choose_event_type_eventType").val();
			loadEventByType (urlAction,eventTypeId,page,$("#event-list"));
		});
		
		//si on change de page
		$(".pagination li a").click (function () {
			eventTypeId = $("#choose_event_type_eventType").val();
			page = $(this).parent().attr("data-page");
			loadEventByType (urlAction,eventTypeId,page,$("#event-list"));
			return false;
		});
	});
</script>

{% endblock body %}
