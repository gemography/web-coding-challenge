/**
 * Retourne la liste des utilisateurs selon le nom ou prénom spécifié
 */ 
function loadSearchedUsers (urlAction, p_searchText, container ) {
container.html('<div class="ctrv-loader"></div>');
	
	$.post(urlAction,
		      {
				searchText:p_searchText,
		      },
		      function (data) {
		    	  container.html(data);
		      },
		      'html'
		  ); 
}

/**
 * Retourne la liste des utilisateurs selon la page spécifié
 */
function loadUser (urlAction,ppage,container) {
	container.html('<div class="ctrv-loader"></div>');
	
	$.post(urlAction,
		      {
				page:ppage
		      },
		      function (data) {
		    	  container.html(data);
		      },
		      'html'
		  ); 
}

/**
 * Désactiver un utilisateur
 */
function desactiveUser (urlAction, tr_elem) {
	$.post(urlAction,
	      {
	      },
	      function (data) {
	    	  if(data.result){
	    		  tr_elem.append();
	    	  }
	      },
	      'json'
	); 
}